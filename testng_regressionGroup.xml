<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="classes" thread-count="6">
    <test name="Regression Tests">
<groups>
    <run>
        <include name="regression"/>
        <include name="contactUs"/>
        <include name="signUp"/>
        <include name="view_and_cart_brand_products"/>
        <include name="add_products"/>
        <include name="scroll_up"/>
        <include name="api"/>
    </run>
</groups>
        <packages>
            <package name="all.tests"/>
        </packages>
    </test>
</suite>

